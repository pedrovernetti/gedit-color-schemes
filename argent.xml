<style-scheme name="Argent" id="argent" version="1.0">
  <author>Pedro V.G.</author>
  <description>Color scheme using an argent color palette with a light gray background</description>

  <style name="text"                    foreground="#374147" background="#D3D7CF" />
  <style name="selection"               foreground="#888A85" background="#EEEEEC" />
  <style name="cursor"                  foreground="#000000" />
  <style name="current-line"            background="#CACECE" />
  <style name="line-numbers"            foreground="#FFFFFF" background="#B7BBBB" />
  <style name="draw-spaces"             foreground="#888A85" />
  <style name="bracket-match"           foreground="#FF005F" bold="true" />
  <style name="bracket-mismatch"        foreground="#E9B96E" background="#FF005F" bold="true" />
  <style name="right-margin"            foreground="#EEEEEC" background="#BABDB6" />
  <style name="search-match"            foreground="#EEEEEC" background="#54B565" />
  <style name="def:comment"             foreground="#A3A79F" italic="true"/>
  <style name="def:shebang"             foreground="#A3A79F" bold="true" italic="true" />
  <style name="def:doc-comment-element" italic="true" />
  <style name="def:constant"            foreground="#0008FF" />
  <style name="def:string"              foreground="#199FC1" />
  <style name="def:special-char"        foreground="#0008FF" />
  <style name="def:special-constant"    foreground="#0008FF" />
  <style name="def:floating-point"      foreground="#0008FF" />
  <style name="def:identifier"          foreground="#204A87" />
  <style name="def:statement"           foreground="#000000" bold="true" />
  <style name="def:type"                foreground="#248535" bold="true" />
  <style name="def:preprocessor"        foreground="#720DAD" />
  <style name="def:error"               foreground="#000006" background="#EE5544" bold="true" />
  <style name="def:warning"             foreground="#000006" background="#DDDD44" />
  <style name="def:note"                foreground="#000000" background="#FF005F" bold="true" />
  <style name="def:underlined"          italic="true"        underline="true" />
  <style name="diff:added-line"         foreground="#DDDD44" />
  <style name="diff:removed-line"       foreground="#527FAF" />
  <style name="diff:changed-line"       foreground="#9D6F98" />
  <style name="diff:diff-file"          foreground="#5FB209" bold="true" />
  <style name="diff:location"           foreground="#3F8800" />
  <style name="diff:special-case"       foreground="#000000" bold="true" />
  <style name="latex:display-math"      foreground="#75507B" />
  <style name="latex:command"           foreground="#5FB209" bold="true" />
  <style name="latex:include"           foreground="#720DAD" />
</style-scheme>
